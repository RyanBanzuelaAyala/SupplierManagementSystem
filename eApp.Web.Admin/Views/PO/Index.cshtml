<div class="row" ng-controller="TransactionController">

    <form role="form" method="get" ng-submit="searchpo()">

        <div class="col-md-3">
            <!-- general form elements -->
            <div class="box box-solid">

                <div class="box-body padding">
                    <!-- left column -->
                    <!-- form start -->
                    <div class="box-body">
                        <hr />
                        <div class="input-group input-group-sm">
                            <label>Select Option : </label>
                            <select class="form-control select2" data-placeholder="Select Option" ng-model="ggSearch.statt" style="width: 100%;" required>
                                <option value="" selected="selected">Select Status</option>
                                <option>available</option>
                                <option>downloaded</option>
                                <option>expired</option>
                            </select>
                            <hr />

                        </div>
                        <hr />
                        <div class="input-group input-group-sm">
                            <input type="text" class="form-control" ng-model="ggSearch.username" id="username" placeholder="Supplier Number" autocomplete="off" required>
                            <span class="input-group-btn">
                                <button type="submit" class="btn btn-default btn-flat">Search</button>
                            </span>
                        </div>
                    </div>

                    <!-- /.box-body -->
                </div>

            </div>
        </div>

    </form>
</div>

