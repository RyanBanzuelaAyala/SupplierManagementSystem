


<div class="row">
    <div class="box box-solid">
        <hr />
    </div>
</div>

<div class="box box-solid">
    <div class="box-body padding">
        <!-- left column -->
        <div class="col-md-6">
            <h3>Purchasing Order Report</h3>
            <p>Generating Report for Daily and Monthly.</p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <!-- general form elements -->

        <div class="box box-solid">


            <form role="form" method="post" action="Report/SupplierPORangeDate" target="_blank">

                <div class="box-body padding">


                    <div class="col-md-12">
                        <h4>Generate Purchasing Order Report</h4>
                        <hr />

                        <div class="form-group">
                            <label>Date range:</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input type="text" class="form-control" id="ixDate" name="ixDate" autocomplete="off" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Supplier Id :</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-user"></i>
                                </div>
                                <input type="text" class="form-control" name="sid" required>
                            </div>
                        </div>

                        <div class="form-group has-feedback">
                            <hr />
                            <button type="submit" class="btn btn-default">Submit</button>
                        </div>

                    </div>
                </div>

            </form>

        </div>
    </div>
</div>

<link href="~/Scripts/Javascript/plugins/datepicker/datepicker3.css" rel="stylesheet" />
<script src="~/Scripts/Javascript/plugins/datepicker/bootstrap-datepicker.js"></script>

<!-- daterange picker -->
<link rel="stylesheet" href="~/Scripts/Javascript/plugins/daterangepicker/daterangepicker-bs3.css">

<!-- date-range-picker -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.10.2/moment.min.js"></script>
<script src="~/Scripts/Javascript/plugins/daterangepicker/daterangepicker.js"></script>

<script>

    $(function () {

        $('#sDate').datepicker().on('changeDate', function () {
            $(this).datepicker('hide');
        });

        $('#ixDate').daterangepicker();

    });

</script>
