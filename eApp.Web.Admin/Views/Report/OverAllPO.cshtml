<div class="row">
    <div class="col-md-12">
        <!-- general form elements -->

        <div class="box box-solid">

            <div class="box-body padding">
                <!-- left column -->
                <form role="form" method="post" action="Report/MonthlyPO" target="_blank">

                    <div class="col-md-6">
                        <h4>Generate Monthly Report</h4>
                        <hr />
                        <div class="form-group has-feedback">
                            <label>Select Month : </label>
                            <select id="mnth" name="mnth" required>
                                <option>Jan</option>
                                <option>Feb</option>
                                <option>Mar</option>
                                <option>Apr</option>
                                <option>May</option>
                                <option>Jun</option>
                                <option>Jul</option>
                                <option>Aug</option>
                                <option>Sep</option>
                                <option>Oct</option>
                                <option>Nov</option>
                                <option>Dec</option>
                            </select>
                        </div>
                        <div class="form-group has-feedback">
                            <button type="submit" class="btn btn-default btn-flat btn-xs">Submit</button>
                        </div>
                    </div>

                </form>

                <!-- /.box-body -->
            </div>

        </div>
    </div>
