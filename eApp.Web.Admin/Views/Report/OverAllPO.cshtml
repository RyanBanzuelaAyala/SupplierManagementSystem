<div class="box box-solid">
    <div class="box-body padding">
        <!-- left column -->
        <div class="col-md-6">
            <h3>Purchasing Order Report</h3>
            <p>Generating Report for Daily and Monthly.</p>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-md-12">
        <!-- general form elements -->

        <div class="box box-solid">

            <div class="box-body padding">
                <!-- left column -->
                <form role="form" method="post" action="Report/SelectDatePO" target="_blank">

                    <div class="col-md-6">
                        <h4>Generate Monthly Report</h4>
                        <hr />

                        <div class="form-group">
                            <label>Date range:</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input type="text" class="form-control" id="xDate" name="xDate" required>
                            </div>
                        </div>
                        <div class="form-group has-feedback">
                            <button type="submit" class="btn btn-default btn-flat btn-xs">Submit</button>
                        </div>
                    </div>

                </form>

                <!-- /.box-body -->
            </div>

        </div>
    </div>
</div>


