





<div class="row">
    <div class="box box-solid">
        <hr />
    </div>
</div>

<style>
    pre {
        font-family: 'Source Sans Pro', 'Helvetica Neue', Helvetica, Arial, sans-serif;
        border: none;
        white-space: pre-wrap;
        background-color: #f9fafc;
    }

    .clpre {
        background-color: #f9fafc;
        border: none;
        border-left: 1px solid #d2d6de;
    }


    option:empty {
        display: none;
    }

    .nNoo {
        margin-top: 5px;
        margin-bottom: 5px;
    }
</style>

<div class="row" ng-controller="RegionController" id="rcc">


    <div class="col-md-4">


        <div class="box box-primary">
            <div class="box-header with-border">

                <div class="form-group box-title bg-purple" style="padding: 10px 20px 10px 10px; margin-top: -130px; margin-left: -10px; border-bottom-right-radius: 30px">
                    <h4 class="label no-padding"> SUPPLIER REGION INFORMATION </h4>
                </div>

            </div>

            <div class="box-body bg-white">

                <div class="col-md-12">

                    <hr />

                    <div class="form-group">
                        <label>Supplier Id : </label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user"></i></span>
                            <input type="text" class="form-control clpre" id="iddx" value="@ViewBag.Info" readonly>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Supplier Name : </label>
                        <div class="input-group">
                            <span class="input-group-addon" style="height: 30px"><i class="fa fa-user"></i></span>
                            <textarea class="form-control clpre" rows="3" cols="3" style="resize: none" readonly>@ViewBag.SuppName</textarea>
                        </div>
                    </div>

                    <hr />

                </div>
            </div>

        </div>

    </div>

    <div class="col-md-8">

        <div class="box box-primary">

            <div class="box-header with-border">

                <div class="form-group box-title bg-purple" style="padding: 10px 20px 10px 10px; margin-top: -130px; margin-left: -10px; border-bottom-right-radius: 30px">
                    <h4 class="label no-padding"> SUPPLIER ACTIVATION PROCESS  </h4>
                </div>

            </div>

            <div class="box-body bg-white">

                <div class="col-md-12">

                    <hr />

                    <div class="form-group">
                        <label>Account Region : </label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user"></i></span>
                            <select class="form-control select2" ng-model="ggRegion.region" ng-click="hasChanged(ggRegion.region)" style="width: 100%;" required>
                                <option value="" selected="selected">Select a Region</option>
                                <option>@ViewBag.Region</option>
                            </select>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label>Email Address : </label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user"></i></span>
                            <input type="email" class="form-control" id="email" ng-model="ggRegion.email" placeholder="Email Address">
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Email Address : </label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user"></i></span>
                            <input type="email" class="form-control" id="email" ng-model="ggRegion.email" placeholder="Email Address">
                        </div>
                    </div>


                    <div class="form-group">
                        <label>Mobile : </label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user"></i></span>
                            <input type="text" class="form-control" id="mobile" ng-model="ggRegion.mobile" placeholder="Mobile No.">
                        </div>
                    </div>

                   
                    <hr />

                    <div class="form-group">
                        <label>Password : <span class="label bg-purple">(12345678) Defult Password</span></label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user"></i></span>
                            <input type="text" class="form-control" id="mobile" ng-model="ggRegion.mobile" placeholder="Mobile No.">
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label>Confirm Password : </label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user"></i></span>
                            <input type="password" class="form-control" id="confirmPassword" ng-model="ggRegion.confirmPassword" placeholder="Confirm Password">
                        </div>
                    </div>
                    

                    <hr />


                    <a href="/sup/userregion/" class="btn btn-default btn-sm"> New Account Region</a>

                    <hr />

                </div>
            </div>
        </div>
    </div>


</div>

