



@if(ViewBag.isError)
{
    <div class="alert alert-danger alert-dismissible" role="alert">

        <h4>
            <i class="icon fa fa-exclamation-sign"></i> Update Error!
        </h4>

        @ViewBag.Result

    </div>
}
else
{
    <div class="alert alert-success alert-dismissible" role="alert">

        <h4>
            <i class="icon fa fa-exclamation-sign"></i> Update Success!
        </h4>

        @ViewBag.Result

    </div>
}

<script>

    setTimeout(myFunction, 3000);

    function myFunction() {
        window.location = "/";
    }

</script>