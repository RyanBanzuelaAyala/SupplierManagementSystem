
<div class="row">
    <div class="box box-solid">
        <hr />
    </div>
</div>

<style>
    pre {
        font-family: 'Source Sans Pro', 'Helvetica Neue', Helvetica, Arial, sans-serif;
        border: none;
        white-space: pre-wrap;
        background-color: #f9fafc;
    }

    .clpre {
        background-color: #f9fafc;
        border: none;
        border-left: 1px solid #d2d6de;
    }


    option:empty {
        display: none;
    }

    .nNoo {
        margin-top: 5px;
        margin-bottom: 5px;
    }
</style>

<div class="row" ng-controller="ResetController" id="rrc">
    
    <div class="col-md-6">

        <div class="box box-primary">
            <div class="box-header with-border">

                <div class="form-group box-title bg-purple" style="padding: 10px 20px 10px 10px; margin-top: -130px; margin-left: -10px; border-bottom-right-radius: 30px">
                    <h4 class="label no-padding"> PROFILE MODIFICATION </h4>
                </div>
            </div>

            <div class="box box-solid">

                <div class="box-body bg-white">

                    <ul class="nav nav-tabs" style="background: none; color: #fff">

                        <li class="active">
                            <a data-target="#password" data-toggle="tab" style="cursor: pointer"><small class="label text-black bg-gray"> PASSWORD</small> </a>
                        </li>
                        <li>
                            <a data-target="#mobile" data-toggle="tab" style="cursor: pointer"><small class="label text-black bg-gray"> MOBILE</small></a>
                        </li>

                    </ul>

                    <div class="tab-content bg-white" style="padding-top: 20px;">

                        <div class="active tab-pane" id="password">

                            <div class="box-body bg-white">

                                <div class="form-group" style="display: none">
                                    <label>Current Password : </label>
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="fa fa-user"></i>
                                        </div>
                                        <input class="form-control validate" type="password" id="cpassword">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>New Password : </label>
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="fa fa-key"></i>
                                        </div>
                                        <input class="form-control validate" type="password" id="npassword">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>Re-Type Password : </label>
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="fa fa-key"></i>
                                        </div>
                                        <input class="form-control validate" type="password" id="rpassword">
                                    </div>

                                </div>

                                <hr />

                                <div class="form-group">
                                    <button type="button" class="btn btn-default" ng-click="submitNewPassword()">Submit</button>
                                </div>

                            </div>


                        </div>

                        <div class="tab-pane" id="mobile">

                            <div class="box-body bg-white">

                                <div class="form-group">
                                    <label>New Mobile : </label>
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="fa fa-mobile"></i>
                                        </div>
                                        <input class="form-control" type="password" ng-model="resetForm.npassword">
                                    </div>
                                </div>
                                
                                <hr />

                                <div class="form-group">
                                    <button type="button" class="btn btn-default">Submit</button>
                                </div>

                            </div>


                        </div>

                    </div>

                </div>
            </div>
        </div>

    </div>

    <div class="col-md-6">

        <div class="box box-primary">

            <div class="box-header with-border">

                <div class="form-group box-title bg-purple" style="padding: 10px 20px 10px 10px; margin-top: -130px; margin-left: -10px; border-bottom-right-radius: 30px">
                    <h4 class="label no-padding"> SUPPLIER DETAILS</h4>
                </div>

            </div>

            <div class="box-body bg-white">

                <div class="form-group">
                    <label>Supplier Number : </label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                        <input type="text" class="form-control clpre" value="330018" readonly id="adate" />
                    </div>
                </div>

                <hr />

                <div class="form-group">
                    <label>Supplier Name : </label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                        <input type="text" class="form-control clpre" value="SUPPLIER DESCRIPTION FULL NAME" readonly id="cdate" />
                    </div>
                </div>



            </div>
        </div>
    </div>

</div>

<link rel="stylesheet" href="~/Scripts/Javascript/plugins/select2/select2.min.css">
<script src="~/Scripts/Javascript/plugins/select2/select2.full.min.js"></script>

