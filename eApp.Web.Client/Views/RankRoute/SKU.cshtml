

<div class="row" ng-controller="SKUController">

    <div class="col-md-12">
        <div class="nav-tabs-custom" style="background-color: #ecf0f5">

            <ul class="nav nav-tabs">
                <li class="active">
                    <a data-target="#person" data-toggle="tab" style="cursor: pointer">RANKING REQUEST by SKU</a>
                </li>
            </ul>

            <div class="tab-content">

                <div class="active tab-pane" id="person">

                    <div class="box-body">

                        <form role="form" ng-submit="requestSKU()">

                            <div class="col-md-6">

                                <!-- form start -->
                                <div class="box-body">

                                    <p ng-show="skuForm.isLoading">
                                        <img src="~/Content/img/294.gif" style="height: 16px; width: 16px;" />
                                        <span style="margin-left: 10px">Please wait.. </span>
                                    </p>

                                    <hr />

                                    <div class="form-group">
                                        <label>Add SKU(s) : {{ skuForm.cntXX }} of 20 </label>
                                        <div class="input-group input-group-sm">
                                            <input type="text" class="form-control" ng-model="skuForm.invoicenum" id="invoicenum" ng-keypress="filterValue($event)" placeholder="SKU Number" autocomplete="off" maxlength="9" style="text-transform: uppercase">
                                            <span class="input-group-btn">
                                                <button type="button" ng-click="addtolist(skuForm.invoicenum)" class="btn btn-default btn-flat">Add to List</button>
                                            </span>
                                        </div>
                                    </div><!-- /.form-group -->

                                    <div class="form-group">
                                        <label>Lisf of SKU(s) : </label>
                                        <textarea class="form-control" rows="4" cols="50" ng-model="skuForm.invoicelist" id="invoicelist" style="resize: none; text-transform: uppercase" ng-readonly="skuForm.isDs1"></textarea>

                                    </div><!-- /.form-group -->

                                    <hr />

                                    <div class="form-group">
                                        <button type="button" class="btn btn-default" ng-click="resetSku()">reset</button>
                                        <button type="submit" class="btn btn-default" ng-disabled="skuForm.isBtn">Submit</button>
                                    </div><!-- /.form-group -->
                                    
                                </div><!-- /.box-body -->

                            </div>

                            <div class="col-md-6">


                                <div class="box-body">

                                    <hr />

                                    <div class="form-group">
                                        <label>To this Date : </label>
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </div>
                                            <input type="text" class="form-control" ng-model="skuForm.currentdate" readonly>
                                        </div><!-- /.input group -->
                                    </div><!-- /.form group -->
                                    
                                    <div class="form-group">
                                        <label>How many days : </label>
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-plus-sign"></i>
                                            </div>
                                            <input class="form-control" type="text" ng-model="skuForm.howmanydays" readonly>
                                        </div><!-- /.input group -->
                                    </div><!-- /.form group -->
                                    
                                    <div class="form-group">
                                        <label>From this Date : </label>
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </div>
                                            <input type="text" class="form-control" ng-model="skuForm.archivedate" readonly>
                                        </div><!-- /.input group -->
                                    </div><!-- /.form group -->

                                    <hr />

                                </div><!-- /.box-body -->

                            </div>

                        </form>

                    </div>

                </div>

            </div>
        </div>
    </div>

</div>

<link href="~/Scripts/Javascript/plugins/select2/select2.min.css" rel="stylesheet" />
