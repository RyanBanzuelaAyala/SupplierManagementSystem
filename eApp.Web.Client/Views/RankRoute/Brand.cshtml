


<div class="row">
    <div class="box box-solid">
        <hr />
    </div>
</div>


<style>
    .arrange {
        position: absolute !important;
        margin-top: -29px !important;
        margin-left: -20px !important;
    }
</style>



<div class="row">
    
    <div class="col-md-12">

        <div class="box box-primary">

            <div class="box-body">

                <hr />

                <div class="col-md-4">

                    <div class="form-group">
                        <label>From this date : </label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                            <input type="text" class="form-control clpre" readonly id="adate" />
                        </div>
                    </div>

                </div>

                <div class="col-md-4">

                    <div class="form-group">
                        <label>To this date : </label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                            <input type="text" class="form-control clpre" readonly id="cdate" />
                        </div>
                    </div>
                </div>

                <div class="col-md-4">

                    <div class="form-group">
                        <label>Number of days  : </label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                            <input type="text" class="form-control clpre" value="30" readonly />
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>


</div>

<ul class="nav nav-tabs" style="background: none; color: #808080">

    <li class="active">
        <a data-target="#brnd" data-toggle="tab" style="cursor: pointer">
            <small class="label text-black bg-gray"> BRAND </small>
        </a>
    </li>
    <li>
        <a data-target="#dpt" data-toggle="tab" style="cursor: pointer">
            <small class="label text-black bg-gray"> DEPARTMENT </small>
        </a>
    </li>
    <li>
        <a data-target="#sku" data-toggle="tab" style="cursor: pointer">
            <small class="label text-black bg-gray"> SKU(S) </small>
        </a>
    </li>

</ul>

<div class="row" ng-controller="RankController">

    <div class="col-md-12">
        <div class="box">

            <div class="box-body" style="padding-left: 0px; padding-right: 0px;  font-size: 12px">
                <div class="box-body">

                    <div class="tab-content" style="padding-top: 20px;">

                        <div class="active tab-pane" id="brnd">

                            <div class="box-body">

                                <div class="form-group">
                                    <label>Select Brand Item(s) : </label>
                                    <select class="form-control select2" id="bBrn" multiple="multiple" data-placeholder="Select a brand" style="width: 100%; display: none"></select>
                                </div>

                                <hr />

                                <div class="form-group">
                                    <a href="/rk/create" target="_self" class="btn btn-default btn-sm"><i class="fa fa-unlink"></i> Reset</a>
                                    <button type="button" class="btn btn-default btn-sm" ng-click="pBrand();"><i class="fa fa-share-square-o"></i> Submit</button>
                                </div>

                            </div>


                        </div>

                        <div class="tab-pane" id="dpt">

                            <div class="box-body">

                                <div class="form-group">
                                    <label>Select Department & Class : </label>
                                    <select class="form-control select2" id="dptreq" data-placeholder="Select a Dept" multiple="multiple" style="width: 100%; display: none"></select>
                                </div>

                                <hr />

                                <div class="form-group">
                                    <a href="/rk/create" target="_self" class="btn btn-default btn-sm"><i class="fa fa-unlink"></i> Reset</a>
                                    <button type="button" class="btn btn-default btn-sm" ng-click="pDept();"><i class="fa fa-share-square-o"></i> Submit</button>
                                </div>

                            </div>

                        </div>

                        <div class="tab-pane" id="sku">

                            <div class="box-body">

                                <div class="form-group">
                                    <label>Add SKU(s) : <span id="cntDD">0</span> of 20</label>
                                    <label class="pull-right text-red">Type SKU and press [ ENTER ]</label>
                                    <select class="form-control select2 numeric" id="skureq" data-placeholder="Type SKU(s)" multiple="multiple" style="width: 100%; display: none"></select>
                                </div>

                                <hr />

                                <div class="form-group">
                                    <a href="/rk/create" target="_self" class="btn btn-default btn-sm"><i class="fa fa-unlink"></i> Reset</a>
                                    <button type="button" class="btn btn-default btn-sm" ng-click="sSku();"><i class="fa fa-share-square-o"></i> Submit</button>
                                </div>

                            </div>

                        </div>

                    </div>


                </div>
            </div>

        </div>
    </div>
</div>

