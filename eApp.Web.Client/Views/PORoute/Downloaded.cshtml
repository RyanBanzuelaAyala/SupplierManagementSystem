
<div class="row">
    <div class="box box-solid">
        <hr />
    </div>
</div>

<ul class="nav nav-tabs" style="background: none; color: #808080">

    <style>
        .arrange {
            position: absolute !important;
            margin-top: -29px !important;
            margin-left: -20px !important;
        }
    </style>

    <li class="active">
        <a onclick="angular.element(document.getElementById('poc')).scope().LoadTable('Available');" data-toggle="tab" style="cursor: pointer">
            <small class="label text-black bg-gray"> AVAILABLE </small>
            @if (ViewBag.POA != 0)
            {
                <span class="badge bg-red arrange pull-left">@ViewBag.POA</span>
            }
        </a>
    </li>
    <li>
        <a onclick="angular.element(document.getElementById('poc')).scope().LoadTable('Downloaded');" data-toggle="tab" style="cursor: pointer">
            <small class="label text-black bg-gray"> DOWNLOADED </small>
            @if (ViewBag.POD != 0)
            {
                <span class="badge bg-red arrange pull-left">@ViewBag.POD</span>
            }
        </a>
    </li>
    <li>
        <a onclick="angular.element(document.getElementById('poc')).scope().LoadTable('Expired');" data-toggle="tab" style="cursor: pointer">
            <small class="label text-black bg-gray"> ARCHIVE </small> 
            @if (ViewBag.POE != 0)
            {
                <span class="badge bg-red arrange pull-left">@ViewBag.POE</span>
            }
        </a>
    </li>

</ul>

<div class="row" ng-controller="PoController" id="poc">

    <div class="col-md-12">
        <div class="box">

            <div class="box-body" style="padding-left: 0px; padding-right: 0px;  font-size: 11px">
                <div class="box-body">

                    <div class="form-group">

                        <div class="box collapsed-box" style="padding-top: 0px">

                            <div class="box-header" style="background-color: #f9fafc; padding-bottom: 20px;">

                                <div class="box-tools pull-left">

                                    <input type="hidden" id="sstatus" value="Downloaded" />

                                    <button class="btn btn-box-tool btn-sm" data-widget="collapse" data-toggle="tooltip" title="Collapse"><i class="fa fa-filter"></i></button>

                                    <a href="/cp/issue" class="btn btn-box-tool btn-sm" data-toggle="tooltip" title="Create Ticket"><i class="fa fa-question"></i></a>

                                </div>
                            </div>

                            <div class="box-body bg-white" style="display: none; padding: 0px">

                                <div class="input-group" style="padding-top: 20px">

                                    <span class="input-group-addon no-border no-padding">
                                        <small class="text-black bg-gray label pull-left">Branch</small>
                                        <select class="form-control" id="x1"></select>
                                    </span>
                                    <span class="input-group-addon no-border no-padding">
                                        <small class="text-black bg-gray label pull-left">Date Released</small>
                                        <select class="form-control" id="x2"></select>
                                    </span>

                                </div>
                            </div>
                        </div>
                    </div>

                    <table id="example" class="table table-bordered table-hover table-striped table-responsive" width="100%"></table>

                </div>
            </div>

        </div>
    </div>
</div>

<style>
    .select-info {
        margin-left: 10px;
    }

    .selected {
        background-color: #605ca8 !important;
        color: #fff;
    }
</style>

@Html.Partial("/Views/_Forms/_Datatable.cshtml")

<script src="~/Scripts/Modularize/System/iQtip.js"></script>

<script src="~/Scripts/Javascript/plugins/datatables/dataTables.select.min.js"></script>
<link href="~/Scripts/Javascript/plugins/datatables/select.dataTables.min.css" rel="stylesheet" />

<script>

    $(document).ready(function () {

        iQtip.initStackTop('iiXX', 'Click here to Download PO(s)');

    });

</script>